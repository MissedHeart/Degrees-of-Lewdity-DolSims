:: City Library
<<set $outside to 0>><<set $location to "city_library_studio">><<effects>>

<<if C.npc.Seath.title is "liar">>
	<<set C.npc.Seath.title to "misanthropist">>
<</if>>

<<if C.npc.Seath.init is 1 and $Seath_Allowed_Pass isnot 1>>
	<<set $Seath_Allowed_Pass to 1>>	
<</if>>

<<if C.npc.Seath.init isnot 1 or !(C.npc.Seath.atfield gte 0 and C.npc.Seath.atfield lte 100)>>
	<<set $Seath_Dialog to 0>>
	<<set $Seath_Noticed_Daily to 0>>
	<<set $Seath_phase to 0>>
	<<set $Seath_Allowed_Pass to 0>>	
	<<set $Seath_Allowed_Pass_Anytime to 0>>
	<<set $Library_Trouble to 0>>

	<<rng 2>>
	<<if C.npc.Seath.gender is undefined>>
		<<if $rng is 2>>
			<<set C.npc.Seath.gender to "m">>
		<<else>>
			<<set C.npc.Seath.gender to "f">>
		<</if>>
	<</if>>
	*/
	<<npc Seath>><<set C.npc.Seath.atfield to 100>><<set C.npc.Seath.love to 0>><<set C.npc.Seath.lust to 100>><<set C.npc.Seath.trauma to 30>><<set C.npc.Seath.love to C.npc.Seath.trauma>>
	/*在希斯的剧情量足以转为li之前，暂时用lust替代atfield进行显示*/
	/*
	这部分代码现在挪到Seath_0.txt里面去了
	<<set C.npc.Seath.title to "misanthropist">>
